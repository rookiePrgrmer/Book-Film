@import "../rating/rating-template.wxss";

.movie-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding: 0 22rpx;
}

.movie-img {
    width: 200rpx;
    height: 270rpx;
    margin: 0 auto;
    padding-bottom: 20rpx;
}

.movie-title {
    width: 200rpx;
    margin-bottom: 16rpx;
    font-size: 24rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}