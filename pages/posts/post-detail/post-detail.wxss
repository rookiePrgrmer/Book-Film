.containter {
  display: flex;
  flex-direction: column;
}

.head-image {
  position: relative;
  width: 100%;
  height: 460rpx;
}

.audio-wrapper {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 460rpx;
}
.audio-wrapper .audio {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 102rpx;
  height: 110rpx;
  transform: translate(-50%, -50%);
  opacity: 0.6;
}

.author-data {
  display: flex;
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.avatar {
  height: 64rpx;
  width: 64rpx;
  vertical-align: middle;
}

.author {
  line-height: 64rpx;
  vertical-align: middle;
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color: #666;
}

.const-text {
  margin-left: 20rpx;
  line-height: 64rpx;
  font-size: 24rpx;
  color: #999;
}

.date {
  margin-left: 20rpx;
  line-height: 64rpx;
  font-size: 24rpx;
  color: #999;
}

.title-wrapper {
  margin-left: 40rpx;
  margin-top: 30rpx;
  font-weight: 700;
  letter-spacing: 2px;
  color: #4b556c;
}
.title {
  font-size: 36rpx;
}

.tool {
  margin-top: 20rpx;
}
.tool:after {
  content: '.';
  height: 0;
  visibility: hidden;
  display: block;
  clear: both;
}

.circle-img {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}
.circle-img image {
  width: 90rpx;
  height: 90rpx;
}

.share-img {
  margin-left: 30rpx;
}

.horizon {
  position: relative;
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  top: 46rpx;
  margin: 0 auto;
  z-index: -1;
}

.detail-wrapper {
  margin: 20rpx 30rpx 20rpx 30rpx;
  text-align: justify;
}

.detail {
  line-height: 44rpx;
  letter-spacing: 2px;
  font-size: 24rpx;
  color: #666;
}